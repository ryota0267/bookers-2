<div calss="row">
  <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
    <h1>User Edit</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for = "inputName">Name</laber>
            <%= f.text_field :name, autofocus: true, id:"inputName"%>
          </div>
        <div class="form-group">
          <label for = "inputImage">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        <div class="form-group">
          <label for = "inputIntroduction">introduction</label>
            <%= f.text_field :introduction, autofocus: true, id:"introduction"%>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary"%>
      <% end %>
  </div>
</div>