<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= render 'errors', book: @book %>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title, class: "wide-text-area" %>
        <h4>Opinion</h4>
        <%= f.text_area :body, class: "wide-text-area" %>
        <%= f.submit 'Update Book', class: "btn btn-success update-button"%>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <%= link_to "Back", '/books', id: "back_link" %>
    </div>
  </div>
</div>